<%- include("template/header", {tituloWeb: 'Crear Mascota'}) %>

    <div class="container">
        <h1>Crear</h1>
        <form action="/mascotas" method="POST">
            <input
                type="text"
                placeholder="Agregar un animal"
                class="form-control my-2"
                name="animal">
            <input
                type="text"
                placeholder="Agregar nombre"
                class="form-control my-2"
                name="nombre">
            <input
                type="text"
                placeholder="Agregar descripcion"
                class="form-control my-2"
                name="descripcion">
            <button 
                class="btn btn-success btn-block my-4"
                href="/mascotas/crear"
            > Agregar
            </button>
        </form>
    </div>
    
